{% extends 'base.html.twig' %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('/css/styles.css') }}">

	{% for post in posts %}

		<!-- !single card -->
		<div class="col-12 col-md-12">
			<div class="card rounded-4">
				<div class="card-title align-self-start">
					<strong class="strong-text lh-1 d-flex flex-row align-items-center ">

						{{"#{post.getOriginAddress()|split(',')[1]} Route"}}

						<span class="badge rounded-pill bg-primary mx-2 mx-lg-3  px-2 fw-medium">
							{{post.getTripType()}}</span>
					</strong>
					<div class="d-flex align-items-center py-1 date-time-combo">
						<img src="https://cdn-icons-png.flaticon.com/512/61/61227.png" class="d-block mx-1 time-image"/>
						<p class="text-secondary m-0">{{ post.getDepartureTime() | date }}</p>
					</div>
				</div>
				<div class="card-body text-center">
					<p class="trajectory">
						{{ post.getOriginAddress() }}
						<------>
							{{ post.getDestinationAddress() }}
						</p>
						<div class="small-section">
							<p class="m-0">Spot price:</p>
							<strong class="m-0 mx-2">{{ post.getPrice()  == 0 ? 'Free' : "#{post.getPrice()} TND" }}</strong>
						</div>
						<div class="small-section">
							<p class="m-0">Vacant spots:</p>
							<div class="mx-3 d-flex align-items-center justify-content-center baggage-allowed-card-section">
								<strong class="text-white m-0 lh-1 px-3 py-1">
									{{ post.getVacantSpots() }}
								</strong>
							</div>
						</div>
						<div class="small-section">
							<p class="m-0">Baggage allowed:</p>
							<div class="mx-3 px-2 d-flex align-items-center justify-content-center baggage-allowed-card-section">
								<strong class="text-white m-0 p-1">

									{{  post.isBaggageAllowed() == 1 ? 'Yes' : 'No' }}
								</strong>
							</div>
						</div>
					</p>
				</div>
				<!-- card footer -->
				<div class="w-100 d-flex justify-content-between">
					<div class="small-section">
						<img src="../../../assets/person_image (1).jpg" class="user-image"/>
						<p class="m-0 mx-2 user-name">{{post.getPostAdmin().getFirstName()}}
							{{ post.getPostAdmin().getLastName() }}</p>
					</div>
					<div class="btn gradient-email-bg rounded-4 px-4">
						<img src="https://www.iconpacks.net/icons/1/free-mail-icon-142-thumb.png" class="mail-icon"/>
					</div>
				</div>
			</div>
		</div>
		<!-- single card end -->


	{% endfor %}


{% endblock %}
